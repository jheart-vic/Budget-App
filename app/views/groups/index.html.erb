<div>
    <div class="total">
      <h3>Total Amount Budget:</h3>
      <h3> <%= number_to_currency(@budgets.sum(&:amount)) %> </h3>
    </div>
  <% @groups.each do |group|%>
    <div class="group-index">
      <div class="each-group">
        <img src="<%= group.icon %>", width="100", height="100", alt="group_icon">
        
        <div>
          <%= link_to user_group_path(current_user, group.id) do %>
            <h2> <%= group.name %></h2>
          <% end %>
          <span> <%= group.created_at.strftime("%B, %e at %H:%M") %> </span>
        </div>
      </div>
    </div>
  <% end %>
  <div class='add-group-btn'>
    <div class='group-btn'>
      <%= link_to "Add Group", new_user_group_path(current_user), class: 'new-group-btn' %>
    </div>
  </div>
</div>
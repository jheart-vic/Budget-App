<div>
    <div class="total row">
    <h3 col-6> Budget</h3>
    <h3 col-6><%= number_to_currency(@budgets.sum(&:amount)) %> </h3>
    </div>
  <% @groups.each do |group|%>
    <div>
      <img src="<%= group.icon %>", width="100", height="100", alt="group_icon">
      
      <div>
        <%= link_to user_group_path(current_user, group.id) do %>
          <h2> <%= group.name %></h2>
        <% end %>
        <span> <%= group.created_at.strftime("%B, %e at %H:%M") %> </span>
      </div>
    </div>
  <% end %>
  <div>
    <%= link_to "Add Group", new_user_group_path(current_user) %>
  </div>
</div>
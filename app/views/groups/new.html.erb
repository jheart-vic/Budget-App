<h2 class=" p-2  mb-3"> Create New Group</h2>

<%= form_with model: @group, url: user_groups_path(current_user),  scope: :group, class: 'd-flex flex-column  col-md-5 justify-content-center align-items-center' do |f| %>
  <div class="input-group p-2  mb-3">
    <%= f.label :icon, class: "input-group-text" %><br />
    <%= f.text_field :icon, autofocus: true, autocomplete: "icon", class: 'form-control' %>
  </div>

  <div class="input-group p-2 mb-3">
    <%= f.label :name, class: "input-group-text" %><br />
    <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Add Group", class: 'btn btn-primary' %>
  </div>
<% end %>

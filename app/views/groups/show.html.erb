<div>
  <div class="show-header">
    <h1> <%= link_to user_groups_path do %>
      <i class="fa-solid fa-chevron-left" style="color: #3778c2; padding-left: 22px"> </i>
      <% end %>
      <h2>Welcome to Budget App show for Groups</h2>
    </h1>
  </div>
  <div class="show">
    <div class="show-total">
      <h3>Total Amount Budget:</h3>
      <h3> <%= number_to_currency(@budgets.sum(&:amount)) %> </h3>
    </div>
    <div class="show-body">
      <img src="<%= @group.icon %>", width="100", height="100", alt="group_icon">
      <h2> <%= @group.name %></h2>
    </div>
    <% @budgets.each do |budget|%>
      <div class="show-budgets"
      <%= render budget %>
      </div>
    <% end %>
    <div>
      <div>
        <%= link_to "Add Budget", new_user_group_budget_path(current_user, @group.id) %>
      </div>
    </div>
  </div>
</div>
<%= form_with model: @budget, url: user_group_budgets_path(current_user, @group), method: :post, scope: :budget do |f| %> 

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name,  autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.number_field :amount %>
  </div>

  <div class="actions">
    <%= f.submit "Add Budget" %>
  </div>
<% end %>